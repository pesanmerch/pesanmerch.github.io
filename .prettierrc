{
  "printWidth": 80, 
  "tabWidth": 2,
  "useTabs": false, 
  "semi": true, 
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "jsxBracketSameLine": false,
  "arrowParens": "always",
  "htmlWhitespaceSensitivity": "css",
  "endOfLine": "lf",

  "overrides": [
    {
      "files": ["*.html"],
      "options": {
        "printWidth": 120
      }
    }
  ]
}